{
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"version": 3,
	"settings": {
		"appearanceTools": true,
		"useRootPaddingAwareAlignments": true,
		"layout": {
			"contentSize": "1280px",
			"wideSize": "1440px"
		},
		"color": {
			"custom": true,
			"customDuotone": true,
			"customGradient": true,
			"defaultGradients": false,
			"defaultPalette": false,
			"link": true,
			"palette": [
				{ "slug": "primary", "color": "#564298", "name": "Primary" },
				{ "slug": "primary-light", "color": "#7B63B8", "name": "Primary Light" },
				{ "slug": "primary-dark", "color": "#3F2F70", "name": "Primary Dark" },
				{ "slug": "secondary", "color": "#a8ddd4", "name": "Secondary" },
				{ "slug": "secondary-light", "color": "#C5EAE4", "name": "Secondary Light" },
				{ "slug": "secondary-dark", "color": "#85C4B8", "name": "Secondary Dark" },
				{ "slug": "background", "color": "#ffffff", "name": "Background" },
				{ "slug": "background-warm", "color": "#f6f5ef", "name": "Background Warm" },
				{ "slug": "text", "color": "#2e2e2e", "name": "Text" },
				{ "slug": "text-light", "color": "#666666", "name": "Text Light" },
				{ "slug": "border", "color": "#E0E0E0", "name": "Border" },
				{ "slug": "accent", "color": "#9b8fb5", "name": "Accent" },
				{ "slug": "success", "color": "#85C4B8", "name": "Success" },
				{ "slug": "warning", "color": "#D4A843", "name": "Warning" },
				{ "slug": "urgent", "color": "#C64B4B", "name": "Urgent" },
				{ "slug": "info", "color": "#2563eb", "name": "Info" }
			]
		},
		"typography": {
			"customFontSize": true,
			"fontStyle": true,
			"fontWeight": true,
			"letterSpacing": true,
			"lineHeight": true,
			"textDecoration": true,
			"textTransform": true,
			"dropCap": false,
			"fontFamilies": [
				{
					"fontFamily": "\"Open Sans\", -apple-system, BlinkMacSystemFont, \"Segoe UI\", Roboto, sans-serif",
					"slug": "body",
					"name": "Body"
				},
				{
					"fontFamily": "\"Poppins\", -apple-system, BlinkMacSystemFont, \"Segoe UI\", Roboto, sans-serif",
					"slug": "heading",
					"name": "Heading"
				}
			],
			"fontSizes": [
				{ "slug": "xs", "size": "14px", "name": "Extra Small" },
				{ "slug": "sm", "size": "15px", "name": "Small" },
				{ "slug": "base", "size": "16px", "name": "Base" },
				{ "slug": "md", "size": "18px", "name": "Medium" },
				{ "slug": "lg", "size": "22px", "name": "Large" },
				{ "slug": "xl", "size": "28px", "name": "Extra Large" },
				{ "slug": "2xl", "size": "35px", "name": "2X Large" },
				{ "slug": "3xl", "size": "44px", "name": "3X Large" },
				{ "slug": "4xl", "size": "48px", "name": "4X Large" }
			]
		},
		"spacing": {
			"customSpacingSize": true,
			"spacingSizes": [
				{ "slug": "2xs", "size": "4px", "name": "2X Small" },
				{ "slug": "xs", "size": "8px", "name": "Extra Small" },
				{ "slug": "sm", "size": "16px", "name": "Small" },
				{ "slug": "md", "size": "24px", "name": "Medium" },
				{ "slug": "base", "size": "16px", "name": "Base" },
				{ "slug": "lg", "size": "32px", "name": "Large" },
				{ "slug": "xl", "size": "48px", "name": "Extra Large" },
				{ "slug": "2xl", "size": "64px", "name": "2X Large" },
				{ "slug": "3xl", "size": "96px", "name": "3X Large" }
			],
			"padding": true,
			"margin": true,
			"blockGap": true,
			"units": [ "px", "em", "rem", "vh", "vw", "%" ]
		},
		"border": {
			"color": true,
			"radius": true,
			"style": true,
			"width": true
		},
		"custom": {
			"borderRadius": {
				"sm": "6px",
				"md": "10px",
				"lg": "14px",
				"xl": "20px",
				"full": "9999px"
			},
			"breakpoints": {
				"sm": "375px",
				"md": "768px",
				"lg": "1024px",
				"xl": "1440px"
			},
			"typography": {
				"fontWeight": {
					"normal": "400",
					"medium": "500",
					"semibold": "600",
					"bold": "700"
				},
				"lineHeight": {
					"tight": "1.2",
					"snug": "1.35",
					"normal": "1.5",
					"relaxed": "1.6"
				},
				"letterSpacing": {
					"tight": "-0.02em",
					"normal": "0"
				}
			}
		},
		"shadow": {
			"presets": [
				{ "slug": "subtle", "shadow": "0 2px 8px rgba(46, 46, 46, 0.06)", "name": "Subtle" },
				{ "slug": "elevated", "shadow": "0 4px 16px rgba(46, 46, 46, 0.08)", "name": "Elevated" },
				{ "slug": "prominent", "shadow": "0 8px 24px rgba(46, 46, 46, 0.12)", "name": "Prominent" }
			]
		}
	},
	"styles": {
		"color": {
			"background": "var(--wp--preset--color--background-warm)",
			"text": "var(--wp--preset--color--text)"
		},
		"typography": {
			"fontFamily": "var(--wp--preset--font-family--body)",
			"fontSize": "var(--wp--preset--font-size--base)",
			"lineHeight": "1.6"
		},
		"spacing": {
			"padding": { "top": "0", "right": "0", "bottom": "0", "left": "0" },
			"blockGap": "var(--wp--preset--spacing--md)"
		},
		"elements": {
			"link": {
				"color": { "text": "var(--wp--preset--color--primary)" },
				":hover": { "color": { "text": "var(--wp--preset--color--primary-dark)" } }
			},
			"heading": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--heading)",
					"fontWeight": "700",
					"lineHeight": "1.2"
				},
				"color": { "text": "var(--wp--preset--color--text)" }
			},
			"h1": { "typography": { "fontSize": "var(--wp--preset--font-size--4xl)", "lineHeight": "1.2", "letterSpacing": "-0.02em" } },
			"h2": { "typography": { "fontSize": "var(--wp--preset--font-size--3xl)", "lineHeight": "1.25", "letterSpacing": "-0.02em" } },
			"h3": { "typography": { "fontSize": "var(--wp--preset--font-size--2xl)", "lineHeight": "1.3" } },
			"button": {
				"color": {
					"background": "var(--wp--preset--color--primary)",
					"text": "var(--wp--preset--color--background)"
				},
				"border": { "radius": "10px" },
				"typography": { "fontWeight": "700" },
				":hover": {
					"color": { "background": "var(--wp--preset--color--primary-dark)" }
				}
			}
		},
		"blocks": {
			"core/button": {
				"color": {
					"background": "var(--wp--preset--color--primary)",
					"text": "var(--wp--preset--color--background)"
				},
				"border": { "radius": "10px" },
				"typography": { "fontWeight": "700" }
			},
			"core/heading": {
				"color": { "text": "var(--wp--preset--color--text)" },
				"typography": { "fontFamily": "var(--wp--preset--font-family--heading)", "fontWeight": "700" }
			},
			"core/paragraph": {
				"color": { "text": "var(--wp--preset--color--text)" }
			}
		}
	},
	"customTemplates": [],
	"templateParts": []
}
